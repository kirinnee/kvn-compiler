
declare charles,sophie,tristan,tristanDeathCG as character
declare brostika as stage

scene tristanscene brostika_tristan
frame //frame 0
    brostika bringCharacter charles
    brostika bringCharacter sophie
    brostika bringCharacter tristan
    brostika bringCharacter tristanDeathCG

    brostika display bgA=0 bdA=1 t=0
        brostika changeBackground bg=alley o=1 t=800
frame
    sophie,charles,tristan setTextColor white
    tristan changeName  ???
    tristan setFontSize  1.7vw
    tristan changeBold
    charles preMove 10
    tristan preMove -20
    charles,tristan animate
    charles changeSprite curious
    sophie changeSprite curious
    tristan changeSprite struggle   //changes the sprite of sophie
    sophie,charles,tristan appear 500

frame
        tristan changeSprite struggle_speak
        tristan preSpeak
            tristan speak  msg=T...thank you for your h- t=500
                tristan wait 100
                    tristan contSpeak msg=help! append=false
                        tristan wait 500
                            tristan changeSprite painexclaim_speak
